<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#1A6C11"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="20dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="nav_header_desc"
        android:paddingTop="10dp"
        android:visibility="gone"
        app:srcCompat="@drawable/picture_employee" />

    <TextView
        android:id="@+id/side_emp_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="유재석 부장"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/side_emp_part"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:text="Emerging Biz Part / 4Unit"
        android:textColor="@color/c_white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@drawable/bd_round_white"
            android:text="프로필 설정"
            android:textColor="@color/c_black" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bd_round_white"
            android:text="쪽지함"
            android:textColor="@color/c_black" />
    </LinearLayout>

</LinearLayout>